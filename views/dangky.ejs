<!DOCTYPE html>
<html lang="en">

<head>
    <title>Đăng ký</title>
    <%- include('./head.ejs') %>
</head>

<body>

    <!--==========================
    Header
  ============================-->
  <%- include('./header.ejs') %>
    <!-- #header -->

    <main id="main">
        <!--==========================
      Contact Section
    ============================-->
        <section id="contact" class="section-bg wow fadeInUp">
            <div class="container" style="max-width: 500px">
                <H3>Tính Năng Đang Phát Triển</H3>
                <div class="section-header">
                    <h3>Đăng ký</h3>
                </div>

                <div class="form">
                    <form action="" method="post" role="form" class="contactForm">
                        <div class="form-group">
                            <label> Tên Người Dùng</label>
                            <input type="username" class="form-control" name="username" placeholder="Tên Người Dùng" data-rule="minlen:4" required/>
                            <div class="validation"></div>
                        </div>
                        <div class="form-group">
                            <label> Email</label>
                            <input type="email" class="form-control" name="email" placeholder="Email" data-rule="minlen:4" required/>
                            <div class="validation"></div>
                        </div>
                        <div class="form-group">
                            <label> Mật Khẩu</label>
                            <input type="password" class="form-control" name="password" placeholder="Mật Khẩu" data-rule="minlen:4" required/>
                            <div class="validation"></div>
                        </div>
                        <div class="form-group">
                            <label> Nghề Nghiệp</label>
                            <input type="job" class="form-control" name="job" placeholder="Nghề Nghiệp" data-rule="minlen:4" required/>
                            <div class="validation"></div>
                        </div>

                        <div class="form-group">
                            <div class="row">
                                <div class="col-md-4">Năm Sinh</div>
                                <div class="col-md-4">Thành Phố</div>
                                <div class="col-md-4">Quận</div>
                                <div class="col-md-4">
                                    <select name="--Năm Sinh--">
                                    <option>1974</option>
                                    <option>Danh sách 02</option>
                                    <option>Danh sách 03</option>
                                    <option>Danh sách 03</option>
                                    </select>
                                </div>
                                <div class="col-md-4">
                                    <select name="--Thành Phố--">
                                  <option>1974</option>
                                  <option>Danh sách 02</option>
                                  <option>Danh sách 03</option>
                                  <option>Danh sách 03</option>
                                  </select>
                                </div>
                                <div class="col-md-4">
                                    <select name="--Quận--">
                                <option>1974</option>
                                <option>Danh sách 02</option>
                                <option>Danh sách 03</option>
                                <option>Danh sách 03</option>
                                </select>
                                </div>
                            </div>
                        </div>
                        <div class="text-center"><button type="submit">Đăng ký</button></div>
                    </form>
                </div>

            </div>
        </section>
        <!-- #contact -->
    </main>

    <!--==========================
    Footer
  ============================-->
  <%- include('./footer.ejs') %>

</body>

</html>